  "repository": {
    "type": "git",
    "url": "git+https://github.com/SMAKSS/random-string.git"
  },
  "scripts": {
    "format": "prettier --write \"**/*.+(js|json|yml|yaml|ts|md)\"",
    "format:check": "prettier -l \"**/*.+(js|json|yml|yaml|ts|md)\"",
    "generate": "rollup -c",
    "generate:check": "yarn format && yarn lint && yarn typecheck",
